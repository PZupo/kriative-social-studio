{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,

    /* ✅ Alias @ -> src */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ✅ Tipos do Vite no editor/TS */
    "types": ["vite/client"]
  },
  "include": ["src", "vite.config.ts", "env.d.ts"]
}
